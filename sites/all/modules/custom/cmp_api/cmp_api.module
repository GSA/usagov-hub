                    }
                    elseif(count($vals) >1){
                        $temp_extra_where = array();
                        $i =0;
                        foreach($vals as $v){
                            $temp_extra_where[] = 'fd.field_description_value LIKE :desc'.$i;
                            $extra_where_param[":desc".$i] = '%'.db_like($v).'%';
