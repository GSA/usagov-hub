function _cmp_api_get_narratives($fn='all') {
    $ret = array();
    $res = db_query("SELECT * FROM node WHERE type = 'text_content_type' LIMIT 30" );
    foreach($res as $r) {
        $n = node_load($r->nid);
        $ret[] = array("id"=>$n->nid,
            "title"=>$n->title);
    }
    return $ret;
}

